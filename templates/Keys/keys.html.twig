<div class='row'>
    <div class='col-xs-8'>
       {{ filters|raw }}
    </div>
    <div class='col-xs-4'>
        <label class="label_checkbox pull-right mt10 mr10">
            <div id="no_tags" class="icheckbox_flat-orange" value="0"></div>
             Без тегов
        </label>
    </div>
</div>

<br>

<div class="col-xs-12" id="body_keys">
    <div id="keys_block" class="block mb20 pt10">        
       <div id='filter_tags' class='col-xs-12 row mb15 zero-padd ml15'>
        </div>       
        <div class="row mb20">
            <div class='col-xs-12'>
                <div class='col-xs-5'>
                    <div class="pull-left ml10"><button class="btn btn-primary" id="add_key" type="button">Добавить ключ &nbsp;<i class="fa fa-plus-circle fa-2" aria-hidden="true"></i></button></div>
                </div>                
                <div class="col-xs-7">
                	<div id='div_export_keys' class="col-xs-1 maxcontent zero-padd pull-right">
                        <a class="btn btn-primary" id="export_keys" type="button">Выгрузить&nbsp;<i class="fa fa-download fa-2" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <table id="key_table" class="list-order list-order_table mb20 table-hover table mb20 table-responsive">
            <thead>
                <tr>
                    <th class="line-order_name">id</th>
                    <th class="line-order_name">Ключ</th>
                    <th class="line-order_name">Теги</th>
                    <th class="line-order_name">Маркер</th>
                    <th class="line-order_name">Кампаний</th>
                    <th class="line-order_name no-sort"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="col-xs-12">
    <div class="block">
        <div class="row">
            <div class="col-xs-6">
                <h3>Файлы для скачивания</h3>
                {% for n, file in files %}
                    <p><a href="/upload/csv/{{ file }}.csv" download>{{ file }}</a></p>
                {% endfor %}
                <h3>Файлы формируются</h3>
                {% for n, file in not_ready %}
                    <p>{{ file.file_name }} готов на {{ file.procent }}%</p>
                {% endfor %}
            </div>
            <div class="col-xs-6">
                <h3>Закачать файл</h3>
                <form action="/admin/index.php" method="post" id="file_form" enctype="multipart/form-data">
                    <p>
                        <input type="file" name="uploaded" id="uploaded">                        
                    </p>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped" id="progressbar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
                    </div>
                    <button id="submit" class="btn btn-primary">Отправить&nbsp;<i class="fa fa-upload" aria-hidden="true"></i></button>
                    <input type="hidden" name="op" value="Controller"/>        
                    <input type="hidden" name="object" value="KeyController"/>
                    <input type="hidden" name="args[mode]" value="uploadFile"/>
                </form>
                <h3>Файлы загруженные</h3>
                {% for n, file in key_files_ready %}
                    <p>{{ file.file_name }}</p>
                {% endfor %}
                <h3>Файлы в обработке</h3>
                {% for n, file in key_files %}
                    <p>{{ file.file_name }} готов на {{ file.procent }}%</p>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <p><a href="/upload/csv/model_types.csv" download>Типы устройств&nbsp;<i class="fa fa-download" aria-hidden="true"></i></a>
                <p><a href="/upload/csv/brands.csv" download>Бренды&nbsp;<i class="fa fa-download" aria-hidden="true"></i></a></p>
                <p><a href="/upload/csv/offers.csv" download>Офферы&nbsp;<i class="fa fa-download" aria-hidden="true"></i></a></p>
            </div>
        </div>
    </div>
</div>