<div class='row'>
    <div class='col-xs-10'>
        {{ filters|raw }}
    </div>
    <div class='col-xs-1 pull-right wauto'>
        <label class='label_checkbox pull-right mt10 mr5'>
            <div id='invalid' class='icheckbox_flat-red s_checkbox'>                    
                <ins class='iCheck-helper'></ins>
            </div>
            Проблемные
        </label>
    </div>
</div>

<br>

<div class="col-xs-12" id="body_history">
    <div id="history_block" class="block mb20">
        <div id="default_sort" hidden="true">1</div>
        <div id='filter_tags' class='col-xs-12 row mb15 zero-padd ml15'>
            <div id="empty_tag" style="margin-top: 30px;"></div>
            <div id='tags_menu' hidden='true'></div>
        </div>        
        <button class="btn btn-default" id="cancel_filter" type="button">Сброс&nbsp;<i class="fa fa-times fa-2" aria-hidden="true"></i></button>
        <!--<div id="tag_info" class="ml10"><i class="fa fa-info-circle" aria-hidden="true" style="color : #337ab7;"></i></div>-->
        <div class='row mb20'>
            <div class='col-xs-12'>
                <div class='col-xs-5'>

                </div>
                <div class="col-xs-7">
                    <div id='div_export_history' class="col-xs-1 maxcontent zero-padd pull-right">
                        <a class="btn btn-primary" id="export_history" type="button">Выгрузить&nbsp;<i class="fa fa-download fa-2" aria-hidden="true"></i></a>
                    </div>
                    <div id="div_datepicker" class='col-xs-3 maxcontent zero-padd pull-right'>
                        {{ datepicker|raw }}
                    </div>
                    <div id="div_status" class='col-xs-2 maxcontent zero-padd pull-right mr10'>                        
                        <select id="status" class="form-control">
                            <option value='0' selected="selected">Любой статус</option>
                            <option value='1'>Успешно</option>
                            <option value='2'>Нет сотрудника UIS</option>
                            <option value='3'>Нет номера переадресации</option>
                            <option value='4'>Внутренняя ошибка UIS</option>
                        </select>
                    </div>
                    <div id="div_active" class='col-xs-2 maxcontent zero-padd pull-right mr10'>                        
                        <select id="active" class="form-control">
                            <option value='-1' selected="selected">Все</option>
                            <option value='0'>Запущен</option>
                            <option value='1'>Остановлен</option>
                        </select>                        
                    </div>
                </div>                       
            </div>                    
        </div>
        <table id="table_history" class="list-order list-order_table mb20 table-hover table mb20 table-responsive">
            <thead>
                <tr>
                    <th class="line-order_name">id</th>
                    <th class="line-order_name">Источник</th>
                    <th class="line-order_name">Владелец</th>
                    <th class="line-order_name">Филиал</th>
                    <th class="line-order_name">Пользователь</th>
                    <th class="line-order_name">Сотрудник UIS</th>
                    <th class="line-order_name">Время</th> 
                    <th class="line-order_name">Действие</th>                                       
                </tr>
            </thead>
        </table>
    </div>
</div>