<div class='row'>
    <div class='col-xs-8'>
       {{ filters|raw }}
    </div>
    <div class='col-xs-4'>
        <label class="label_checkbox pull-right mt10 mr10">
            <div id="no_partner" class="icheckbox_flat-red" value="0"></div>
            Нет партнера
        </label>    
    </div>
</div>

<br>

<div class="col-xs-12" id="body_campaigns">
    <div id="campaign_block" class="block mb20 pt10">        
       <div id='filter_tags' class='col-xs-12 row mb15 zero-padd ml15'>
            <div id="empty_tag" style="margin-top: 30px;"></div>
            <div id='tags_menu' hidden='true'></div>
        </div>
        <button class="btn btn-default" id="cancel_filter" type="button">Сброс&nbsp;<i class="fa fa-times fa-2" aria-hidden="true"></i></button>
        <!--<div id="tag_info" class="ml10"><i class="fa fa-info-circle" aria-hidden="true" style="color : #337ab7;"></i></div>--> 
        <div class="row mb20">
            <div class='col-xs-12'>
                <div class='col-xs-5'>
                    <div id="div_active" class='col-xs-2 maxcontent zero-padd mr10'>                        
                        <select id="active" class="form-control">    
                        	<option value='-1'>Все</option>                        
                            <option value='0' selected="selected">Активные</option>
                            <option value='1'>Неактивные</option>   
                            <option value='2'>Архивные</option>                       
                        </select>
                    </div>
                </div>
                <div class="col-xs-7">
                    <div id='div_lid_requests' class="col-xs-1 maxcontent zero-padd pull-right mr10">
                        <a class="btn btn-primary" id="lid_requests" type="button">Запрос на лиды&nbsp;<i class="fa fa-bell fa-2" aria-hidden="true"></i></a>
                    </div>
                    <div id='div_export_campaigns' class="col-xs-1 maxcontent zero-padd pull-right">
                        <a class="btn btn-primary" id="export_campaigns" type="button">Выгрузить&nbsp;<i class="fa fa-download fa-2" aria-hidden="true"></i></a>
                    </div>                      
                    <div id='div_refresh_key' class="col-xs-1 maxcontent zero-padd pull-right">
                        <a class="btn btn-target" id="refresh_key" type="button">Обновить ключи&nbsp;<i class="fa fa-refresh fa-2" aria-hidden="true"></i></a>
                    </div>
                    <div id="div_suffics" class='col-xs-2 maxcontent zero-padd pull-right mr10'>                        
                        <select id="suffics" class="form-control">
                            <option value='-1' selected="selected">Любой канал</option>
                            <option value='0'>YD</option>
                            <option value='1'>GA</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <table id="campaign_table" class="list-order list-order_table mb20 table-hover table mb20 table-responsive">
            <thead>
                <tr>
                    <th class="line-order_name">tid</th>
                    <th class="line-order_name">id</th>
                    <th class="line-order_name">Название</th>
                    <th class="line-order_name">Теги</th>
                    <th class="line-order_name">Статус</th> 
                    <th class="line-order_name">Источник</th>
                    <th class="line-order_name">Аккаунт</th>
                    <th class="line-order_name">Ключи</th>
                </tr>
            </thead>
        </table>
    </div>
</div>